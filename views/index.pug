html 
    
    head 
        meta(charset="UTF-8")
        meta(name="viewport", content=
            "width=device-width, initial-scale=1.0")
        title pug-express
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css'
        integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous")
    body 
        include ./nav.pug
     
        div.container-fluid
            div.row-g-3
                div.col-md-12
                    form(action="/saveProduct", method="POST")
                        div.col-md-12
                            label(for="title", class="form-label") Title*
                            input#title(type="text", name="title", class="form-control", required)
                        div.col-md-12    
                            label(for="price", class="form-label") Price*
                            input#price(type="number", name="price", class="form-control",required)
                        div.col-md-12    
                            label(for="thumbnail", class="form-label") thumbnail 
                            input#thumbnail(type="text", name="thumbnail", class="form-control")
                        div.col-12    
                            button(type="submit", class="btn btn-primary") Submit 
        if(saveObj)
                small='Se ha guardado exitosamente el producto: ' + saveObj.title + ' - ' + saveObj.price + ' - ' + saveObj.thumbnail